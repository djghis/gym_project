<form action="/sessions/<%= @session.id %>" method="post">
  <label for="type">Type:</label>
    <input type="text" name="type" value="<%= @session.type %>"/> <br/>
  <label for="room_id">Room:</label>
    <select name="room_id">
      <% for room in @rooms %>
      <option value="<%= room.id%>"><%= room.name %></option>
      <% end %>
    </select> <br>
  <label for="start_time">Time:</label>
    <input type="datetime-local" name="start_time" value="<%= @session.start_time %>"/> <br/>
  <label for="duration">Duration in minutes:</label>
    <input type="text" name="duration" value="<%= @session.duration %>"/> <br/>
  <label for="trainer">Trainer:</label>
    <input type="text" name="trainer" value="<%= @session.trainer %>"/> <br/>

  <input type="submit" value="Confirm Changes"/>
</form>
